{{#if user}}
<nav class="navbar-back-arrow-save">
  <ul>
    <li><button class="back-button"><a href="/users/profile"><img class="back-button-image" src="/images/left-arrow.png"
            alt="back-arrow"></a></button></li>
    <li><a href="/"><img class="min-icon" src="/images/inked-in-logo-B.png" alt="logo-icon"></a></li>
  </ul>
</nav>
{{/if}}
<section class="form-container">
  <h2>{{user.username}} edit content</h2>
  <div id="form">
    <form action="/tattoo/edit/{{photoData._id}}" method="POST">
      {{#if tattooerUser}}
      <label>Tattoo Style</label>
      <select class="select" name="tattooPhotoStyle" multiple required>
        {{#each resultSelectStyles}}
          <option value="{{this}}" selected>{{this}}</option>
        {{/each}}
        {{#each resultNoSelect}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
      {{/if}}
      <label>Year</label>
      <input type="number" name="year" value="{{photoData.year}}" placeholder="Year" required />
      <label>Where?</label>
      <input type="text" name="place" value="{{photoData.place}}" placeholder="Where?" required />
      {{#if userUser}}
        <label>Tattooer</label>
        <input type="text" name="tattooer" value="{{photoData.tattooer}}" required />
      {{/if}}
      <div class="button-form-container">
        <button type="submit">Upload</button>
      </div>
    </form>
      <div class="button-form-container">
      <a href="/tattoo/delete/{{photoData._id}}"><button class="delete-photos-button">DELETE</button></a>
      </div>
  </div>
</section>
