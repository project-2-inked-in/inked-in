{{#if user}}
    <nav class="navbar-layout-back-arrow">
        <button class="back-button"><a href="/tattooer/{{tattooer._id}}"><img class="back-button-image" src="/images/left-arrow.png" alt="back-arrow"></a></button>
        <section class="logo-nav-section">
            <ul>
                <li><a href="/"><img class="max-icon" src="/images/inked-in-logo-B.png" alt="logo-icon"></a>
                </li>
            </ul>
        </section>
    </nav>
{{/if}}
{{#if userNoReview}}
    <section class="formrev">
        <form method="POST" action="/reviews/{{tattooer._id}}">
            <label>Rate to the artist (1-5)</label>
            <input type="number" class="input1" placeholder="5" name="stars" max="5"/>
            <label>Review:</label>
            <input type="text" placeholder="I love this tattooer" name="comment"/>
            <button type="submit">Add review</button>
        </form>
    </section>
{{/if}}
{{#if userCanedit}}
    {{#each userCanedit}}
    <section class="review">
        <div class="info-review-div">
            <h5>{{toUpperCase this.userId.username}}</h5> 
            <p class="comment">{{toUpperCase this.comment}}.</p> 
            <p class="rate">Rate: {{this.stars}}/5</p>
        </div>
        <div class="edit-delete-icons-div">
            <a href="/reviews/edit/{{_id}}"><img class="min-icon-review" src="/images/edit-review.png" alt="logo-edit"></a>
            <a href="/reviews/delete/{{_id}}"><img class="min-icon-review" src="/images/delete-icon.png" alt="logo-edit"></a>
        </div>
    </section>
    {{/each}}
{{/if}}
{{#if userCanTedit}}
    {{#each userCanTedit}}
    <section class="review">
        <div class="info-review-div">
            <h5>{{toUpperCase this.userId.username}}</h5> 
            <p class="comment">{{toUpperCase this.comment}}.</p> 
            <p class="rate">Rate: {{this.stars}}/5</p>
        </div>
    </section>
    {{/each}}
    {{else}}
        <section class="placeholder-logo-container">
            <img src="/images/logo-placeholder.png" alt="logo-placeholder">
        </section>
{{/if}}