<h3>Tattoers</h3>

<form method="GET" action="/search/tattooer"> 
    <input type="text" name="tattooPhotoStyle" placeholder="find by tatto style or tattooer username"/>
    <input type="text" name="username" placeholder="or username" />
    <button type="submit">Search</button>
</form>
<section class="result-tattooes">
    {{#each tattoo}}
    
    <img src="{{this.tattooImage}}" alt="">
    <a href="/tattooer/{{this.user._id}}"><p>name: {{this.user.username}}</p></a>
    {{/each}}
</section>

